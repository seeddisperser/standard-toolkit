{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/constellation-tracker",
  "title": "Constellation Tracker",
  "description": "A tool used to keep a project's catalog-info.yaml file up to date for use in Constellation.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "dev-tk",
    "tooling"
  ],
  "subPath": "tooling/constellation-tracker",
  "version": "1.0.1",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml",
    "./CHANGELOG.md",
    "./package.json",
    "./README.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lib.d.ts",
        "default": "./dist/lib.js"
      },
      "default": "./dist/lib.js"
    }
  },
  "scripts": {
    "build": "pnpm tsc && pnpm license && pnpm format",
    "constellation-tracker": "node ./dist/main.js",
    "format": "pnpm biome format . --write",
    "license": "pnpm zx ../../scripts/license.mjs",
    "lint": "pnpm biome lint",
    "postinstall": "pnpm run build",
    "test": "pnpm vitest --dir=test",
    "test:coverage": "pnpm vitest --dir=test --coverage"
  },
  "dependencies": {
    "ansis": "^4.0.0",
    "commander": "^14.0.0",
    "globby": "^14.1.0",
    "ora": "^8.2.0",
    "radash": "^12.1.1",
    "true-myth": "^9.0.1",
    "typescript": "5.8.3",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "@types/node": "^24.9.0",
    "tsup": "8.5.0",
    "vitest": "^2.1.9"
  },
  "bin": {
    "constellation-tracker": "./dist/main.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
