{
  "$schema": "https://json.schemastore.org/package",
  "name": "@accelint/logger",
  "title": "Accelint Logger",
  "description": "A flexible and extensible logging utility with callsite tracking and environment-aware capabilities.",
  "author": "https://hypergiant.com",
  "owner": "default/pathfinder",
  "keywords": [
    "dev-tk",
    "tooling"
  ],
  "subPath": "packages/logger",
  "version": "0.1.1",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gohypergiant/standard-toolkit"
  },
  "type": "module",
  "files": [
    "./dist/**",
    "./catalog-info.yaml",
    "./CHANGELOG.md",
    "./package.json",
    "./README.md"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    },
    "./*": {
      "import": {
        "types": "./dist/*/index.d.ts",
        "default": "./dist/*/index.js"
      },
      "default": "./dist/*/index.js"
    }
  },
  "scripts": {
    "bench": "pnpm vitest bench --run --dir src",
    "build": "pnpm tsup",
    "constellation-tracker": "constellation-tracker",
    "dev": "pnpm tsc --watch",
    "index": "pnpm zx ../../scripts/indexer.mjs packages/logger",
    "lint": "pnpm biome lint",
    "test": "pnpm vitest --dir=src",
    "test:watch": "pnpm vitest --dir=src --watch"
  },
  "dependencies": {
    "@loglayer/plugin": "^2.1.1",
    "@loglayer/transport": "^2.2.1",
    "@loglayer/transport-simple-pretty-terminal": "^2.2.1",
    "callsites": "^4.2.0",
    "serialize-error": "^12.0.0",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@accelint/constellation-tracker": "workspace:*",
    "@accelint/typescript-config": "workspace:*",
    "@accelint/vitest-config": "workspace:*",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "esbuild-fix-imports-plugin": "^1.0.23",
    "loglayer": "^6.6.0",
    "tsup": "8.5.0",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "loglayer": "^6.6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
