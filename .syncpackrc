{
  "$schema": "./node_modules/syncpack/dist/schema.json",
  "dependencyTypes": [
    "dev",
    "prod",
    "peer",
    "overrides"
  ],
  "formatRepository": false,
  "semverGroups": [
    {
      "dependencies": [
        "tsup",
        "@types/react*",
        "react",
        "typescript",
        "jsdom"
      ],
      "packages": [],
      "range": ""
    },
    {
      "dependencies": [
        "**"
      ],
      "packages": [
        "**"
      ],
      "range": "^"
    }
  ],
  "sortFirst": [
    "$schema",
    "name",
    "title",
    "description",
    "author",
    "owner",
    "keywords",
    "subPath",
    "version",
    "private",
    "license",
    "repository",
    "type",
    "files",
    "main",
    "module",
    "source",
    "types",
    "exports",
    "workspaces",
    "scripts",
    "dependencies",
    "devDependencies",
    "peerDependencies",
    "optionalDependencies",
    "overrides"
  ],
  "versionGroups": [
    {
      "dependencies": [
        "@accelint/**"
      ],
      "label": "Use * for local packages",
      "packages": [
        "**"
      ],
      "pinVersion": "workspace:*"
    },
    {
      "dependencies": [
        "typescript"
      ],
      "isIgnored": true,
      "label": "Manually set typescript version based on dependencies"
    },
    {
      "dependencies": [
        "react*",
        "jsdom",
        "@types/react*"
      ],
      "isIgnored": true,
      "label": "Keep react components in sync since this project is using node v18.*"
    },
    {
      "dependencies": [
        "tailwind*"
      ],
      "isIgnored": true,
      "label": "Tailwind specific"
    }
  ]
}
